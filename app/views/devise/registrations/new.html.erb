<div class="col-xs-8 col-xs-offset-2">
  <div class="panel panel-default">
    <div class="panel-heading form-view">
      <h2 class="panel-title">Sign Up</h2>
    </div>
    <div class="panel-body">
      <div class="row">
        <div class="col-xs-10 col-xs-offset-1">
            <%= devise_error_messages! %>
          </div>
        <div class="col-md-8 col-md-offset-2">
          
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= puts f %>
            <div class="field">
              <%= f.label :f_name, "First Name" %><br />
              <%= f.text_field :f_name, autofocus: true, class: "form-control" %>
            </div>
            
            <div class="field">
              <%= f.label :l_name, "Last Name" %><br />
              <%= f.text_field :l_name, class: "form-control" %>
            </div>
            
            <div class="field">
              <%= f.label :phone, "Phone Number" %><br />
              <%= f.text_field :phone, class: "form-control" %>
            </div>
            
            <div class="field">
              <%= f.label :dob, "Date of Birth" %><br />
             <input type="text" name='user[dob]' class="form-control datepicker">
            </div>
            
            <div class="field">
              <%= f.label :email %><br />
              <%= f.email_field :email, autocomplete: "email", class: "form-control" %>
            </div>
          
            <div class="field">
              <%= f.label :password %>
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %><br />
              <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
            </div>
          
            <div class="field">
              <%= f.label :password_confirmation, "Password Confirmation" %><br />
              <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
            </div>
          
            <div class="actions text-center">
              <%= f.submit "Sign up", class: "btn btn-success" %>
            </div>
          <% end %>
          
          <%= render "devise/shared/links" %>
        </div>
        
        <script>
          $(function () {
            $('.datepicker').datepicker({
              format: {
                  toDisplay: function (date, format, language) {
                    var d = new Date(date);
                    d.setDate(d.getDate() + 1);
                    d = moment(d).format('YYYY/MM/DD');
                    return d
                  },
                  toValue: function (date, format, language) {
                    var d = new Date(date);
                    d.setDate(d.getDate() + 1);
                    d = moment(d).format('YYYY/MM/DD');
                    return d
                  }
                }
            });
          });
        </script>
      </div>
    </div>
  </div>
</div>
